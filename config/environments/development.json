{
  "server": {
    "port": 3000
  },
  "database": {
    "path": "./data/dev-devflow.db"
  },
  "monitoring": {
    "fileSystem": {
      "debounceDelay": 100
    },
    "git": {
      "pollInterval": 2000
    }
  },
  "events": {
    "flushInterval": 2000
  },
  "security": {
    "auth": {
      "enabled": false
    }
  },
  "logging": {
    "level": "debug",
    "console": {
      "colorize": true
    }
  },
  "debug": {
    "enabled": true,
    "verboseErrors": true,
    "stackTraces": true
  }
}