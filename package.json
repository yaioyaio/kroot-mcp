{
  "name": "devflow-monitor-mcp",
  "version": "0.1.0",
  "description": "AI-powered development process monitoring MCP server",
  "type": "module",
  "main": "dist/server/index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/server/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "verify": "./scripts/verify.sh",
    "mcp:test": "node tests/manual/test-mcp-server.js",
    "monitor:test": "node tests/manual/test-file-monitor.js",
    "performance:test": "node tests/manual/performance-test.js",
    "integration:test": "node tests/manual/test-event-integration.js"
  },
  "keywords": [
    "mcp",
    "monitoring",
    "development",
    "ai",
    "typescript"
  ],
  "author": "yaioyaio",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.19.9",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.3",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/chokidar": "^1.7.5",
    "@types/eventemitter3": "^1.2.0",
    "better-sqlite3": "^12.2.0",
    "chokidar": "^4.0.3",
    "eventemitter3": "^5.0.1",
    "simple-git": "^3.28.0",
    "zod": "^4.0.14"
  }
}
